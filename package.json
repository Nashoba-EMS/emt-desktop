    "@types/react-redux": "^7.1.4",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.2",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5"
  }
